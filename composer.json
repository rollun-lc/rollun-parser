{
  "name": "rollun-com/rollun-parser",
  "description": "Foundation for parsers",
  "type": "library",
  "license": "BSD-3-Clause",
  "minimum-stability": "stable",
  "authors": [],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.2",
    "electrolinux/phpquery": "^0.9.6",
    "fzaninotto/faker": "^1.8",
    "guzzlehttp/guzzle": "^6.3",
    "monolog/monolog": "^2.1",
    "rollun-com/rollun-callback": "^6.0",
    "rollun-com/rollun-datastore": "^6.6",
    "rollun-com/rollun-dic": "^3.3",
    "zendframework/zend-servicemanager": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7",
    "squizlabs/php_codesniffer": "^3.3",
    "symfony/dotenv": "^4.1",
    "zendframework/zend-config-aggregator": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "rollun\\parser\\": "src/Parser/src",
      "HttpClient\\": "src/HttpClient/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HttpClientTest\\": "test/HttpClientTest/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "clear-config-cache": "php bin/clear-config-cache.php",
    "code-sniffer": "phpcs .",
    "code-beautiful": "phpcbf .",
    "server": "php -S 0.0.0.0:8000 -t public public/index.php"
  }
}
